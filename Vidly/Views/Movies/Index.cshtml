@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<table class="table table-bordered table-hover">
    <tr>
        <th>Movie</th>
        <th>Genre</th>
    </tr>
@foreach (Vidly.Models.Movie movie in Model)
{
    <tr>

                <td>@Html.ActionLink(movie.name, "Details", "Movies", new { id = movie.id }, null)</td>
                <td>@movie.genre</td>

    </tr>
}
</table> 

